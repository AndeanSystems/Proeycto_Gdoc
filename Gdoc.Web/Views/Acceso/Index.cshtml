<!-- Content Header (Page header) -->
<section class="content-header">
    <section class="content" ng-controller="acceso_controller as ctrl" ng-cloak>
        <!--comienso de cuerpo documento electrocnico-->
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary margin-top">
                    <div class="box-header with-border">
                        <h3 class="box-title">Accesos</h3>
                    </div>
                    <div class="box-body no-padding">
                        <div class="row">
                            <br>
                            <div class="col-md-2">
                                <h5 class="pull-right">Id Usuario</h5>
                            </div>
                            <div class="col-md-3">
                                @*<input type="text" class="form-control" ng-model="ctrl.acceso.Usuario.NombreUsuario" placeholder="Usuario">*@
                                <md-content>
                                    <form ng-submit="$event.preventDefault()">
                                        <md-autocomplete ng-disabled="ctrl.isDisabled"
                                                         md-no-cache="ctrl.noCache"
                                                         md-selected-item="ctrl.selectedItem"
                                                         md-search-text-change="ctrl.searchTextChange(ctrl.searchText)"
                                                         md-search-text="ctrl.searchText"
                                                         md-selected-item-change="ctrl.selectedItemChange(item)"
                                                         md-items="item in ctrl.querySearch(ctrl.searchText)"
                                                         md-item-text="item.NombreUsuario"
                                                         md-min-length="0"
                                                         placeholder="Usuario"
                                                         md-menu-class="autocomplete-custom-template">
                                            <md-item-template>
                                                <span>{{item.NombreUsuario}}</span>
                                            </md-item-template>
                                        </md-autocomplete>
                                    </form>
                                </md-content>
                            </div>

                            <div class="col-md-3">
                                <input type="text" class="form-control" ng-model="ctrl.usuario.NombreCompleto" placeholder="Nombre" disabled="true">

                            </div>
                            <div class="col-md-2">

                            </div>
                            <div class="col-md-2">
                                <button ng-click="ctrl.buscarAccesoSistema(ctrl.usuario)" type="submit" name="search" id="search-btn" class="btn btn-default"><i class="fa fa-search" data-placement="top" data-toggle="tooltip" title="Buscar"></i></button>
                                @*<button class="btn btn-default"><i class="fa fa-floppy-o" data-placement="top" data-toggle="tooltip" title="Guardar"></i></button>*@
                                @*<button class="btn btn-default" data-toggle="modal" data-target="#modal_contenido"><i class="fa fa-file fa-1x" data-placement="top" data-toggle="tooltip" title="Nuevo"></i></button>*@
                            </div>
                        </div>
                        <br>
                    </div>
                    <div class="table-responsive mailbox-messages">
                        <div class="grid" style="font-size: 12px; height: 400px" ui-grid="ctrl.gridAccesos" ui-grid-pagination></div>
                    </div>
                </div>
            </div>
        </div>
        <!--modal de editor-->
        @Html.Partial("_CreateAndEdit")

    </section>
</section>
@section Scripts{
    <script src="~/scripts/appjs/acceso-controller.js"></script>
}

