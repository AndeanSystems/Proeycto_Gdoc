<!-- Content Header (Page header) -->
<section class="content-header">
    <section class="content" ng-controller="acceso_controller as ctrl" ng-cloak>
        <!--comienso de cuerpo documento electrocnico-->
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary margin-top">
                    <div class="box-header with-border">
                        <h3 class="box-title">Accesos</h3>
                    </div>
                    <div class="box-body no-padding">

                        <div class="row">
                            <br>

                            <div class="col-md-2">
                                <h5 class="pull-right">Id Usuario</h5>
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control" ng-model="ctrl.acceso.Usuario.NombreUsuario" placeholder="Usuario">
                            </div>

                            <div class="col-md-3">
                                <input type="text" class="form-control" ng-model="ctrl.accesosistema.Persona.NombrePers" placeholder="Nombre" disabled="true">

                            </div>
                            <div class="col-md-2">

                            </div>
                            <div class="col-md-2">
                                <button ng-click="ctrl.buscarAccesoSistema(ctrl.acceso)" type="submit" name="search" id="search-btn" class="btn btn-default"><i class="fa fa-search" data-placement="top" data-toggle="tooltip" title="Buscar"></i></button>
                                @*<button class="btn btn-default"><i class="fa fa-floppy-o" data-placement="top" data-toggle="tooltip" title="Guardar"></i></button>*@
                                <button class="btn btn-default" data-toggle="modal" data-target="#modal_contenido"><i class="fa fa-file fa-1x" data-placement="top" data-toggle="tooltip" title="Nuevo"></i></button>
                            </div>
                        </div>

                        <br>

                    </div>

                    <div class="table-responsive mailbox-messages">
                        <div class="grid" ui-grid="ctrl.gridAccesos" ui-grid-pagination></div>
                        @*<table class="table table-hover table-striped">
                            <thead>
                            <th>Id Usuario<i class="fa fa-sort"></i></th>
                            <th>Nombre y Apellido<i class="fa fa-sort"></i></th>
                            <th>Empresa<i class="fa fa-sort"></i></th>
                            <th>Cargo<i class="fa fa-sort"></i></th>
                            <th>Area<i class="fa fa-sort"></i></th>
                            <th>Acciones<i class="fa fa-sort"></i></th>

                            </thead>
                            <tbody>
                                <tr data-toggle="modal" data-target="#modal_contenido" ng-repeat="item in ctrl.listUsuario">
                                    <td class="mailbox-date">{{item.IDUsuario}}</td>
                                    <td class="mailbox-subject">{{item.NombreUsuario}}</td>
                                    <td class="mailbox-subject">{{item.RazoSocial.RazonSocial}}</td>
                                    <td class="mailbox-subject">{{item.Cargo.DescripcionConcepto}}</td>
                                    <td class="mailbox-subject">{{item.Area.DescripcionConcepto}}</td>
                                    <td>
                                        <i class="fa fa-pencil-square-o  " data-placement="top" data-toggle="tooltip" title="Permisos"></i>
                                        <i class="fa fa-times  " data-placement="top" data-toggle="tooltip" title="Borrar"></i>
                                    </td>
                                </tr>
                            </tbody>
                        </table>*@
                    </div>

                </div>

            </div>
        </div>

        <!--modal de editor-->
        <div class="modal fade" id="modal_contenido">
            <div class="modal-dialog modal-lg" style="width:60%;">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Accesos de Usuario</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">

                            <div class="col-md-12">
                                <div class="box box-primary">
                                    <div class="box-header with-border">
                                        <h3 class="box-title">Accesos</h3>
                                        @*<button class="btn btn-default pull-right"><span class="glyphicon glyphicon-floppy-saved" data-placement="top" data-toggle="tooltip" title="Guardar enviar"></span></button>*@
                                        <button class="btn btn-default pull-right"><i class="fa fa-floppy-o" data-placement="top" data-toggle="tooltip" title="Guardar"></i></button>
                                    </div><!-- /.box-header -->

                                    <form role="form">
                                        <div class="box-body no-padding">

                                            <div class="form-group no-margin-bottom" style="margin-top:5px">
                                                <label class="col-sm-3">Usuario</label>
                                                <div class="col-sm-5">
                                                    <input type="text" class="form-control" placeholder="Nombre">
                                                </div>
                                            </div>
                                            <table class="table table-hover table-striped">
                                                <thead>
                                                <th>Pagina<i class="fa fa-sort"></i></th>
                                                <th>DireccionUrl<i class="fa fa-sort"></i></th>
                                                <th>Habilitar<i class="fa fa-sort"></i></th>

                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td class="mailbox-date">Escritorio Virtual</td>
                                                        <td class="mailbox-subject">../Inicio/frmEscritorioVirtual.aspx</td>
                                                        <td class="mailbox-subject"><input type="checkbox" style="opacity:initial" value=""></td>
                                                    </tr>
                                                    <tr>
                                                        <td class="mailbox-date">Cambiar Contraseña</td>
                                                        <td class="mailbox-subject">../Inicio/frmCambiarClave.aspx</td>
                                                        <td class="mailbox-subject"><input type="checkbox" style="opacity:initial" value=""></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="modal-footer">
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                </div>
            </div>
        </div>

    </section>
</section>
@section Scripts{
    <script src="~/scripts/appjs/acceso-controller.js"></script>
