<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Fecpmac</title>

    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link href="~/Content/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/skins/_all-skins.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/ui-grid.min.css" rel="stylesheet" />
    <link href="~/Content/angular-material.min.css" rel="stylesheet" />
    <!--Fepcmac Style-->
    <link href="~/Content/Fepcmac.css" rel="stylesheet" type="text/css" />
    <!--Bootstrap file input-->
    @*<link href="http://netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet">*@
    <link href="~/Content/fileinput.css" rel="stylesheet" type="text/css" />
    <!--SweetAlert-->
    <link href="~/Content/plugins/sweetalert/sweetalert.css" rel="stylesheet" type="text/css" />
    <!-- jQuery 2.1.4 -->
    <script src="~/scripts/jquery-3.1.0.min.js"></script>
    @*<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>*@
    <script src="~/Content/plugins/file%20input/fileinput.min.js"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="~/scripts/bootstrap.min.js" type="text/javascript"></script>
    <!-- AdminLTE App -->
    <script src="~/scripts/app.min.js" type="text/javascript"></script>
    <!-- date-range-picker -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.2/moment.min.js" type="text/javascript"></script>
    <!--SweetAlert-->
    <script src="~/Content/plugins/sweetalert/sweetalert.min.js"></script>
    <script src="~/Content/plugins/filestyle/bootstrap-filestyle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
    <style>
        .red {
            color: transparent;
            background-image: url(resources/img/icon_red.png);
            background-repeat: no-repeat;
            background-size: 20px;
            background-position: center;
        }

        .green {
            color: transparent;
            background-image: url(resources/img/icon_green.png);
            background-repeat: no-repeat;
            background-size: 20px;
            background-position: center;
        }

        .yellow {
            color: transparent;
            background-image: url(resources/img/icon_orange.png);
            background-repeat: no-repeat;
            background-size: 20px;
            background-position: center;
        }
    </style>
</head>
<body class="skin-blue sidebar-mini" style="background-color: #ecf0f5" ng-app="app">
    <div class="wrapper">
        <header class="main-header">
            @Html.Partial("_Header")
        </header>
        <div>
            @Html.Partial("_Sidebar")
        </div>
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <footer class="main-footer">
            @Html.Partial("_Footer")
        </footer>

        <!--modal en construccion-->
        <div class="modal fade" id="modal_page" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <h2>En construcción</h2>
                    </div>
                </div>
            </div>
        </div>
        <!--modal avatars-->
        <div id="modal_imagenes" class="modal fade" tabindex="-1" data-width="760" style="display: none;" ng-controller="header_controller as ctrl">
            <div class="modal-dialog modal-lg" style="width: 30%; height: auto;">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Seleccione su avatar</h4>
                    </div>
                    <div class="modal-body">
                        <div class="col-md-12 margin-bottom"  >
                            <div ng-repeat="item in ctrl.listAvatar">
                                <div class="clearfix" ng-if="$index % 3 == 0"></div>
                                <div class="col-md-4">
                                    <img ng-src="{{item}}" ng-click="ctrl.avatar(item)" style="max-width: 100%; height: auto;" class="img-responsive">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer" style="max-width: 100%; height: auto;">
                        <div class="col-md-12">
                            <div class="pull-right">
                                <input type="file" data-input="false" data-buttontext="Buscar Avatar" class="filestyle" id="fotoAvatar" accept="image/*">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/scripts/angular/angular.min.js"></script>
    <script src="~/scripts/angular-locale_es-pe.js"></script>
    <script src="~/scripts/ui-grid.min.js"></script>
    <script src="~/scripts/angular-animate/angular-animate.min.js"></script>
    <script src="~/scripts/angular-aria/angular-aria.min.js"></script>
    <script src="~/scripts/angular-material/angular-material.min.js"></script>
    <script src="~/scripts/appjs/app-factory.js"></script>
    <script src="~/scripts/appjs/app-service.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
