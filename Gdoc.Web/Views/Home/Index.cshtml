@model Gdoc.Entity.Models.Usuario
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/AdminLTE.min.css">
    <!-- iCheck -->
    @*<link rel="stylesheet" href="~/Content/plugins/iCheck/square/blue.css">*@
    <!--SweetAlert-->
    <link href="~/Content/plugins/sweetalert/sweetalert.css" rel="stylesheet" type="text/css" />
</head>
<body class="hold-transition login-page" style="background-image: url('/resources/img/fondo_docweb3c.png'); background-size: cover; background-repeat:no-repeat" >
    <div class="login-box">
        @if (TempData["Message2"] != null)
        {
            <script>
                alert("Usuario incorrecto");
            </script>
        }@if (TempData["Message"] != null)
        {
            <script>
                alert("Usuario incorrecto");
            </script>
        }
        @using (Html.BeginForm("Login", "Usuario", FormMethod.Post))
        {
            <div class="login-logo">
                <img width="360" height="80" src="~/resources/img/logo.png" />
            </div>
        <!-- /.login-logo -->
            <div class="login-box-body">
                <p class="login-box-msg"><img width="150" height="40" src="~/resources/img/DocWeb_Logo2_BLANCO.png" /></p>
                <p class="login-box-msg">Inicio sesión</p>

                <div class="form-group has-feedback">
                    @Html.EditorFor(x => x.NombreUsuario, new { htmlAttributes = new { @class = "form-control", @autofocus = true, @required = true } })
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.EditorFor(x => x.ClaveUsuario, new { htmlAttributes = new { @type = "password", @class = "form-control", @autofocus = true, @required = true } })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        @*<div class="checkbox icheck">
                                <label>
                                    <input type="checkbox" value="0"> Recuerdame
                                </label>
                            </div>*@
                    </div>
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Ingresar</button>
                    </div>
                </div>
                <div class="text-center margin" style="font-size:13px">
                    <strong>Copyright &copy; 2016 <a href="http://andeansystems.com" target="_blank">AndeanSystems</a>.</strong>
                </div>
                @*<a href="#">Recuperar Contraseña</a><br>
                    <a href="#" class="text-center">Registrar Nuevo Miembro</a>*@
            </div>

        }
    </div>
    <script src="~/scripts/jquery-3.1.0.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    @*<script src="~/Content/plugins/iCheck/icheck.min.js"></script>*@
    <script src="~/Content/plugins/sweetalert/sweetalert.min.js"></script>
    @*<script>
            $(function () {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_square-blue',
                    radioClass: 'iradio_square-blue',
                    increaseArea: '20%' // optional
                });
            });
        </script>*@

</body>
</html>
