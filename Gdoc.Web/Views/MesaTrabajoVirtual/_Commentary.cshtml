<form role="form" name="frmDatos" novalidate>
    <div class="col-md-12">
        <div class="box box-primary margin-top">
            <div class="box-header with-border">
                <h3 class="box-title">Mesa de Trabajo Virtual</h3>
                <button class="btn btn-default pull-right" ng-click="ctrl.CambiarVentana2('ListWork')"><i class="fa fa-list-alt" data-placement="top" data-toggle="tooltip" title="Lista"></i></button>
            </div>

            <div class="box-body">

                <div class="form-group">
                    <h3 class="col-sm-12">Titulo : {{ctrl.operacion.TituloOperacion}}</h3>
                </div>

                <div class="form-group margin-bottom">
                    <label class="col-sm-12">
                        Tipo Mesa : {{ctrl.operacion.TipoDoc.DescripcionConcepto}};
                        Prioridad : {{ctrl.operacion.Prioridad.DescripcionConcepto}};
                        Estado : {{ctrl.operacion.Estado.DescripcionConcepto}};
                        Fecha de Registro : {{ctrl.operacion.FechaEnvio | date:"dd/MM/yyyy"}};
                        Organizador : {{ctrl.usuarioOrganizador}}
                    </label>
                </div>

                <div class="form-group">
                    <label class="col-sm-12">Invitados : {{ctrl.usuarioInvitados}}</label>
                </div>
                <div class="form-group">
                    <label class="col-sm-12">Documento Adjunto : <i ng-click="ctrl.mostrarAdjuntosMesa(ctrl.operacion)" class="fa fa-eye" style="padding: 4px;font-size: 1.4em;" data-placement="bottom" data-toggle="tooltip" title="Ver"></i></label>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Comentarios</h3>
                <button class="btn btn-default pull-right" ng-click="ctrl.grabarComentarioMesa()"><i class="fa fa-floppy-o" data-placement="top" data-toggle="tooltip" title="Guardar"></i></button>
            </div>

            <div class="box-body">
                <div class="form-group">
                    <label class="col-sm-12">Comentario</label>
                    <div class="col-sm-12">
                        <textarea ng-model="ctrl.mesavirtualComentario.ComentarioMesaVirtual" class="form-control"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-12">Documento Adjunto</label>
                    <div class="col-sm-12">
                        <input type="file" class="form-control" onchange="ReadFileToBinary(this)" id="input_file2" multiple>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Historial de Comentarios</h3>
            </div>
            <div class="box-body no-padding">
                <div class="grid" style="font-size: 12px; height: 200px" ui-grid="ctrl.gridComentarios"></div>
            </div>
        </div>
    </div>
    <!--MODAL ADJUNTOS-->
    <div class="modal fade" id="modal_adjuntos">
        <div class="modal-dialog modal-lg" style="width:50%;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Documentos Adjuntos</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box box-primary">
                                <table class="table table-hover table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Tipo Archivo</th>
                                            <th>Abrir</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="item in ctrl.listDocumentoAdjunto">
                                            <td>{{item.Adjunto.NombreOriginal}}</td>
                                            <td>{{item.Adjunto.TipoArchivo}}</td>
                                            <td>
                                                <a class="fa fa-folder-open-o" ng-href="http://192.168.100.29:85/ADJUNTOS/{{item.Archivo}}" style="padding: 4px;font-size: 1.4em;" target="_blank" data-placement="top" data-toggle="tooltip" title="Abrir"></a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
