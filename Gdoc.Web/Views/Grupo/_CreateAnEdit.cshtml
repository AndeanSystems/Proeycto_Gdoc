<!--modal de editor-->
<div class="modal fade" id="modal_contenido">
    <div class="modal-dialog modal-lg" style="width:50%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Nuevo Grupo</h4>
            </div>
            <div class="modal-body">
                <div class="row">

                    <div class="col-md-12">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">Datos del Grupo</h3>
                                <button class="btn btn-default pull-right"><span class="glyphicon glyphicon-floppy-saved" data-placement="top" data-toggle="tooltip" title="Guardar enviar"></span></button>
                                <button class="btn btn-default pull-right" ng-click="ctrl.grabar()"><i class="fa fa-floppy-o" data-placement="top" data-toggle="tooltip" title="Guardar"></i></button>
                            </div><!-- /.box-header -->

                            <form role="form">
                                <div class="box-body no-padding">

                                    <div class="form-group">
                                        <label class="col-sm-12">Codigo de Grupo</label>
                                        <div class="col-sm-12">
                                            <input type="text" class="form-control" ng-model="ctrl.grupo.CodigoGrupo">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-12">Descripcion del Grupo</label>
                                        <div class="col-sm-12">
                                            <input type="text" class="form-control" ng-model="ctrl.grupo.NombreGrupo">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-12">Comentario</label>
                                        <div class="col-sm-12">
                                            <textarea style="resize:inherit" class="form-control" ng-model="ctrl.grupo.ComentarioGrupo"></textarea>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-12">Participantes</label>
                                        <div class="col-sm-10">
                                            <select class="form-control" ng-model="ctrl.grupo.IDUsuario" ng-options="par.IDUsuario as par.NombreUsuario for par in ctrl.listUsuario">
                                                <option value="">Seleccione</option>
                                            </select>
                                        </div>
                                        <div class="col-sm-2">
                                            <span class="input-group-btn">
                                                @*<button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-plus-circle" data-placement="top" data-toggle="tooltip" title="Agregar"></i></button>*@
                                                <button name="search" id="search-btn" class="btn btn-default" ng-click="ctrl.agregar(ctrl.grupo.IDUsuario)"><i class="glyphicon glyphicon-plus" data-placement="top" data-toggle="tooltip" title="Agregar"></i></button>
                                            </span>
                                        </div>
                                    </div>

                                </div>
                            </form>
                            <br />
                            <div class="row">
                                <div class="col-md-12">
                                    @*<div class="form-group">
                                            <div class="col-sm-11">
                                                <input type="text" class="form-control" placeholder="Buscar Usuario">
                                            </div>
                                            <div class="col-sm-1">
                                                <span class="input-group-btn">
                                                    <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-plus-circle" data-placement="top" data-toggle="tooltip" title="Agregar"></i></button>
                                                    <button type="submit" name="search" id="search-btn" class="btn btn-default"><i class="fa fa-search" data-placement="top" data-toggle="tooltip" title="Buscar"></i></button>
                                                </span>
                                            </div>
                                        </div>*@
                                    <div class="col-md-12">
                                        <div class="table-responsive mailbox-messages">
                                            <table class="table table-hover table-striped" id="tbUsuariosGrupo">
                                                <thead>
                                                <th>Nombre y Apellidos</th>
                                                <th>Cargo</th>
                                                <th>Acciones    </th>
                                                </thead>
                                                <tbody>
                                                    <tr ng-repeat="item in ctrl.listaUsuariosGrupo">
                                                        <td class="mailbox-date">{{item.IDUsuario}}</td>
                                                        <td class="mailbox-date">{{item.Cargo.DescripcionConcepto}}</td>
                                                        <td>
                                                            <i class="fa fa-times  " data-placement="top" data-toggle="tooltip" title="Borrar"></i>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                    </div><!-- /.modal-content -->

                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        </div>
    </div>
</div>
