<div class="col-md-12">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Datos de la Lista</h3>
            <button class="btn btn-default pull-right btn-sm" ng-click="ctrl.grabar(2)"><span class="glyphicon glyphicon-floppy-saved" data-placement="top" data-toggle="tooltip" title="Guardar enviar"></span></button>
            @*<button class="btn btn-default pull-right" ng-click="ctrl.grabar(1)"><i class="fa fa-floppy-o" data-placement="top" data-toggle="tooltip" title="Guardar"></i></button>*@
            <button class="btn btn-default pull-right btn-sm" ng-click="ctrl.CambiarVentana('List')"><i class="fa fa-list-alt" data-placement="top" data-toggle="tooltip" title="Lista"></i></button>
         </div><!-- /.box-header -->

        <form role="form">
            <div class="box-body no-padding">

                <div class="form-group">
                    <label class="col-sm-12">Codigo de la Lista</label>
                    <div class="col-sm-12">
                        <input type="text" class="form-control" ng-model="ctrl.grupo.CodigoGrupo">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-12">Descripcion de la Lista</label>
                    <div class="col-sm-12">
                        <input type="text" class="form-control" ng-model="ctrl.grupo.NombreGrupo">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-12">Comentario</label>
                    <div class="col-sm-12">
                        <textarea style="resize:inherit" class="form-control" ng-model="ctrl.grupo.ComentarioGrupo"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-12">Participantes</label>
                    @*<div class="col-sm-10">
                        <select class="form-control" ng-model="ctrl.grupo.IDUsuario" ng-options="par.IDUsuario as par.NombreUsuario for par in ctrl.listUsuario">
                            <option value="">Seleccione</option>
                        </select>
                    </div>*@
                    <div class="col-sm-12">
                        <md-content class="autocomplete" layout="column">
                            <md-contact-chips ng-model="ctrl.participantesGrupo"
                                              md-contacts="ctrl.querySearch($query, 'U')"
                                              md-contact-name="Nombre"
                                              md-highlight-flags="i"
                                              filter-selected="ctrl.filterSelected"
                                              placeholder="Destinatario">
                            </md-contact-chips>
                        </md-content>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>


