<!-- Content Header (Page header) -->
<section class="content-header">
    <section class="content" ng-controller="grupo_controller as ctrl" ng-cloak>
        <!--comienso de cuerpo documento electrocnico-->
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary margin-top">
                    <div class="box-header with-border">
                        <h3 class="box-title">Grupos</h3>
                    </div>
                    <div class="box-body no-padding">

                        <div class="row">
                            <br>

                            <div class="col-md-2">
                                <h5 class="pull-right">Grupo</h5>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" placeholder="Buscar Grupo">
                            </div>

                            <div class="col-md-2">
                                <button type="submit" name="search" id="search-btn" class="btn btn-default"><i class="fa fa-search" data-placement="top" data-toggle="tooltip" title="Buscar"></i></button>
                                @*<button class="btn btn-default"><i class="fa fa-floppy-o" data-placement="top" data-toggle="tooltip" title="Guardar"></i></button>*@
                                <button class="btn btn-default" data-toggle="modal" data-target="#modal_contenido"><i class="fa fa-file fa-1x" data-placement="top" data-toggle="tooltip" title="Nuevo"></i></button>
                            </div>
                        </div>

                        <br>

                    </div>

                    <div class="table-responsive mailbox-messages">
                        <table class="table table-hover table-striped">
                            <thead>
                            <th>Grupo<i class="fa fa-sort"></i></th>
                            <th>Participante(s)<i class="fa fa-sort"></i></th>
                            <th>Estado<i class="fa fa-sort"></i></th>
                            <th>Comentario<i class="fa fa-sort"></i></th>
                            <th>Acciones<i class="fa fa-sort"></i></th>


                            </thead>
                            <tbody>
                                <tr ng-repeat="item in ctrl.listGrupo">
                                    <td class="mailbox-date">{{item.NombreGrupo}}</td>
                                    <td class="mailbox-subject">nose</td>
                                    <td class="mailbox-subject">{{item.EstadoGrupo}}</td>
                                    <td class="mailbox-subject">{{item.ComentarioGrupo}}</td>
                                    <td>
                                        <i class="fa fa-pencil-square-o  " data-placement="top" data-toggle="tooltip" title="Editar"></i>
                                        <i class="fa fa-times  " data-placement="top" data-toggle="tooltip" title="Borrar"></i>
                                        <i class="fa fa-eye  " data-placement="top" data-toggle="tooltip" title="" data-original-title="Ver"></i>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>


                </div>

            </div>
        </div>

        <!--modal de editor-->
        <div class="modal fade" id="modal_contenido">
            <div class="modal-dialog modal-lg" style="width:50%;">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Nuevo Grupo</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">

                            <div class="col-md-12">
                                <div class="box box-primary">
                                    <div class="box-header with-border">
                                        <h3 class="box-title">Datos del Grupo</h3>
                                        <button class="btn btn-default pull-right"><span class="glyphicon glyphicon-floppy-saved" data-placement="top" data-toggle="tooltip" title="Guardar enviar"></span></button>
                                        <button class="btn btn-default pull-right"><i class="fa fa-floppy-o" data-placement="top" data-toggle="tooltip" title="Guardar" ng-click="ctrl.grabar()"></i></button>
                                    </div><!-- /.box-header -->

                                    <form role="form">
                                        <div class="box-body no-padding">

                                            <div class="form-group">
                                                <label class="col-sm-3">Codigo de Grupo</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" ng-model="ctrl.grupo.CodigoGrupo">
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-sm-3">Descripcion del Grupo</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" ng-model="ctrl.grupo.NombreGrupo" >
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-sm-3">Comentario</label>
                                                <div class="col-sm-9">
                                                    <textarea style="resize:inherit" class="form-control" ng-model="ctrl.grupo.ComentarioGrupo"></textarea>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-sm-3">Participantes</label>
                                                <div class="col-sm-7">
                                                    <select class="form-control" ng-model="ctrl.grupo.IDUsuario" ng-options="par.IDUsuario as par.NombreUsuario for par in ctrl.listUsuario">
                                                        <option value="">Seleccione</option>
                                                    </select>
                                                </div>
                                                <div class="col-sm-2">
                                                    <span class="input-group-btn">
                                                        @*<button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-plus-circle" data-placement="top" data-toggle="tooltip" title="Agregar"></i></button>*@
                                                        <button name="search" id="search-btn" class="btn btn-default" ng-click="ctrl.agregar()"><i class="glyphicon glyphicon-plus" data-placement="top" data-toggle="tooltip" title="Agregar"></i></button>
                                                    </span>
                                                </div>
                                            </div>

                                        </div>
                                    </form>
                                    <br />
                                    <div class="row">
                                        <div class="col-md-12">
                                            @*<div class="form-group">
                                                <div class="col-sm-11">
                                                    <input type="text" class="form-control" placeholder="Buscar Usuario">
                                                </div>
                                                <div class="col-sm-1">
                                                    <span class="input-group-btn">
                                                        <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-plus-circle" data-placement="top" data-toggle="tooltip" title="Agregar"></i></button>
                                                        <button type="submit" name="search" id="search-btn" class="btn btn-default"><i class="fa fa-search" data-placement="top" data-toggle="tooltip" title="Buscar"></i></button>
                                                    </span>
                                                </div>
                                            </div>*@
                                            <div class="col-md-12">
                                                <div class="table-responsive mailbox-messages">
                                                    <table class="table table-hover table-striped" id="tbUsuariosGrupo">
                                                        <thead>
                                                        <th>Nombre y Apellidos</th>
                                                        <th>Cargo</th>
                                                        <th>Acciones    </th>
                                                        </thead>
                                                        <tbody>
                                                            <tr ng-repeat="item in ctrl.listaUsuariosGrupo">
                                                                <td class="mailbox-date">{{item.NombreGrupo}}</td>
                                                                <td class="mailbox-date">{{item.ComentarioGrupo}}</td>
                                                                <td>
                                                                    <i class="fa fa-times  " data-placement="top" data-toggle="tooltip" title="Borrar"></i>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                            </div><!-- /.modal-content -->

                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                </div>
            </div>
        </div>


    </section>
</section>
@section Scripts{
    <script src="~/scripts/appjs/grupo-controller.js"></script>
}
