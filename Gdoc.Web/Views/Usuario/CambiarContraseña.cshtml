@model Gdoc.Entity.Models.Usuario
<section class="content-header">
    <section class="content" ng-controller="contrasena_controller as ctrl" ng-cloak>
        <br />
        <br />
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary margin-top">

                        <div class="box-header with-border">
                            <h3 class="box-title">Cambiar Contraseña</h3>
                            <button class="btn btn-default pull-right" ng-click="ctrl.grabar()"><span class="glyphicon glyphicon-floppy-saved" data-placement="top" data-toggle="tooltip" title="Confirmar"></span></button>

                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-12">
                                    <div>
                                        <form role="form">
                                            <div class="box-body no-padding">

                                                <div class="form-group no-margin-bottom">
                                                    <label>Usuario</label>
                                                    @Html.TextBox("StudentName", Session["NombreUsuario"], new { @class = "form-control", disabled = "true"})  
                                                    @*<input type="text" class="form-control" ng-model="ctrl.usuario.NombreUsuario" disabled="true" />*@
                                                </div>

                                                <div class="form-group no-margin-bottom">
                                                    <label>Contraseña Anterior</label>
                                                    <input type="password" class="form-control" placeholder="Contraseña Anterior" ng-model="ctrl.usuario.ClaveUsuarioAntigua">
                                                </div>

                                                <div class="form-group no-margin-bottom">
                                                    <label>Nueva Contraseña</label>
                                                    <input type="password" class="form-control" placeholder="Nueva Contraseña" ng-model="ctrl.usuario.ClaveUsuarioNueva">
                                                </div>

                                                <div class="form-group no-margin-bottom">
                                                    <label>Repetir Nueva Contraseña</label>
                                                    <input type="password" class="form-control" placeholder="Repetir Nueva Contraseña" ng-model="ctrl.usuario.ClaveUsuarioNueva2">
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div><!-- /.col -->

                                <div class="col-md-1">
                                    <div>
                                    </div>
                                </div>

                                <div class="col-md-1">
                                    <div>
                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer">
                            </div><!-- /.modal-content -->
                        </div>

                    </div>


                </div>
            </div>
        </div>
    </section>
</section>
@section Scripts{
    <script src="~/scripts/appjs/contrasena-controller.js"></script>
}
