<div class="modal fade" id="modal_contenido">
    <div class="modal-dialog modal-lg" style="width:60%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Registro Concepto</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form name="frmConcepto" novalidate>

                        <div class="col-md-6">
                            <div class="box box-primary">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Opciones del Concepto</h3>
                                </div>
                                <div class="box-body no-padding">

                                        <div class="form-group no-margin-bottom">
                                            <label>Tipo de Concepto <span class="text-danger">(*)</span></label>
                                            <select class="form-control" ng-model="ctrl.concepto.TipoConcepto" ng-options="tc.CodiConcepto as tc.DescripcionConcepto for tc in ctrl.listTipoConceptoEditable" required>
                                                <option value="">Seleccione</option>
                                            </select>
                                        </div>

                                        <div class="form-group no-margin-bottom">
                                            <label>Codigo <span class="text-danger">(*)</span></label>
                                            <input type="text" class="form-control" placeholder="Codigo" ng-model="ctrl.concepto.CodiConcepto" required>
                                        </div>

                                        <div class="form-group no-margin-bottom">
                                            <label>Descripcion</label>
                                            <input type="text" class="form-control" placeholder="Descripcion" ng-model="ctrl.concepto.DescripcionConcepto">
                                        </div>

                                        <div class="form-group no-margin-bottom">
                                            <label>Descripcion Abreviatura</label>
                                            <input type="text" class="form-control" placeholder="Abreviatura" ng-model="ctrl.concepto.DescripcionCorta">
                                        </div>

                                        <div class="form-group no-margin-bottom">
                                            <label>Estado</label>
                                            <select class="form-control" ng-model="ctrl.concepto.EstadoConcepto">
                                                <option value="">Seleccione</option>
                                                <option selected="selected" value="0">CREADO</option>
                                                <option value="1">ACTIVO</option>
                                                <option value="2">INACTIVO</option>
                                            </select>
                                        </div>
                                    </div>
                            </div>
                        </div><!-- /.col -->

                        <div class="col-md-6">
                            <div class="box box-primary">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Contenido del Concepto</h3>
                                    @*<button class="btn btn-default pull-right" ng-click="ctrl.grabar(2)"><span class="glyphicon glyphicon-floppy-saved" data-placement="top" data-toggle="tooltip" title="Guardar enviar"></span></button>*@
                                    @*<button class="btn btn-default pull-right" ng-click="ctrl.grabar()"><i class="fa fa-floppy-o" data-placement="top" data-toggle="tooltip" title="Guardar"></i></button>*@
                                    <button class="btn btn-default pull-right" ng-click="ctrl.grabar()" ng-disabled="frmConcepto.$invalid"><i class="fa fa-floppy-o" data-placement="top" title="Guardar"></i></button>
                                </div>
                                    <div class="box-body no-padding">

                                        <div class="form-group no-margin-bottom">
                                            <label>Valor1</label>
                                            <input type="text" class="form-control" placeholder="Valor1" ng-model="ctrl.concepto.ValorUno">
                                        </div>

                                        <div class="form-group no-margin-bottom">
                                            <label>Valor2</label>
                                            <input type="text" class="form-control" placeholder="Valor2" ng-model="ctrl.concepto.ValorDos">
                                        </div>

                                        <div class="form-group no-margin-bottom">
                                            <label>Texto1</label>
                                            <input type="text" class="form-control" placeholder="Texto1" ng-model="ctrl.concepto.TextoUno">
                                        </div>

                                        <div class="form-group no-margin-bottom">
                                            <label>Texto2</label>
                                            <input type="text" class="form-control" placeholder="Texto2" ng-model="ctrl.concepto.TextoDos">
                                        </div>
                                    </div>
                            </div>
                        </div>
                        <div class="modal-footer">

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

