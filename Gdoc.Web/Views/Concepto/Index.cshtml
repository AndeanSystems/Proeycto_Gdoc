<section class="content-header">
</section>
<section class="content" ng-controller="concepto_controller as ctrl" ng-cloak>
    <!--comienso de cuerpo documento electrocnico-->
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Concepto</h3>
                    <button class="btn btn-default btn-sm pull-right" ng-click="ctrl.registrarConcepto()"><i class="fa fa-file fa-1x" data-placement="top" data-toggle="tooltip" title="Nuevo"></i></button>
                </div>
                <div class="box-body">
                    <div class="row">

                        <div class="col-md-1">

                        </div>
                        <div class="col-md-2">
                            <h5 class=" ">Tipo de Concepto</h5>

                        </div>
                        <div class="col-md-3">
                            <select class="form-control" ng-model="ctrl.concepto.TipoConcepto" ng-options="tc.CodiConcepto as tc.DescripcionConcepto for tc in ctrl.listTipoConceptoTitulo" ng-change="ctrl.buscarConcepto(ctrl.concepto.TipoConcepto,ctrl.EstadoConcepto)">
                                <option value="">Seleccione</option>
                            </select>
                        </div>

                        <div class="col-md-2">
                            @*<h5 class="pull-right" >Estado</h5>*@
                        </div>
                        <div class="col-md-2">
                            @*<select class="form-control" ng-model="ctrl.EstadoConcepto">
                                    <option value="">Seleccione</option>
                                    <option value="1">Activo</option>
                                    <option value="0">Inactivo</option>
                                </select>*@

                        </div>

                        <div class="col-md-2">
                            @*<button type="submit" name="search" id="search-btn" class="btn btn-default" ng-click="ctrl.buscarConcepto(ctrl.concepto.TipoConcepto,ctrl.EstadoConcepto)"><i class="fa fa-search" data-placement="top" data-toggle="tooltip" title="Buscar"></i></button>*@
                        </div>
                    </div>
                </div>
                <div class="grid" style="font-size: 12px; height: 400px" ui-grid="ctrl.gridOptions" ui-grid-pagination ui-grid-auto-resize ui-grid-resize-columns ui-grid-move-columns></div>
            </div>
        </div>
    </div>
    <!--modal de editor-->
    @Html.Partial("_CreateAndEdit")
</section>
@section Scripts{
    <script src="~/scripts/appjs/concepto-controller.js"></script>
}