<form role="form" name="frmDatos" novalidate>
    <div class="col-md-12 margin-top">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Documento Electronico</h3>
                <button class="btn btn-default pull-right" ng-disabled="frmDatos.$invalid" ng-click="ctrl.grabarComentarioProveido()"><i class="fa fa-paper-plane" data-placement="top" data-toggle="tooltip" title="Guardar"></i></button>

                <button class="btn btn-default pull-right" ng-click="ctrl.CambiarVentana('List')"><i class="fa fa-list-alt" data-placement="top" data-toggle="tooltip" title="Grupos de Trabajo"></i></button>
            </div>

            <div class="box-body">

                <div class="form-group">
                    <label style="font-size:20px" class="col-sm-12">{{ctrl.operacion.TituloOperacion}}</label>
                </div>

                <div class="form-group">
                    <label class="col-sm-12">
                        {{ctrl.operacion.TipoDoc.DescripcionCorta}};
                        {{ctrl.operacion.Prioridad.DescripcionConcepto}};
                        {{ctrl.operacion.Estado.DescripcionConcepto}};
                        {{ctrl.operacion.FechaEnvio | date:"dd/MM/yyyy HH:mm"}};
                        <label>
                            Organizado por:
                        </label>
                        <label ng-repeat="item in ctrl.usuarioOrganizador">
                            {{item.Nombre}}
                        </label>
                    </label>
                </div>
                <div class="form-group">
                    <label class="col-sm-12">
                        Participantes :
                        <label ng-repeat="item in ctrl.usuarioInvitados">
                            {{item.Nombre}} ;
                        </label>
                    </label>

                </div>

                <div class="form-group">
                    <label class="col-sm-12">Destinatarios</label>
                    <div class="col-sm-12">
                        <md-content class="autocomplete" layout="column">
                            <md-contact-chips ng-model="ctrl.destinatarios"
                                              md-contacts="ctrl.querySearch($query, 'U')"
                                              md-contact-name="Nombre"
                                              md-highlight-flags="i"
                                              filter-selected="ctrl.filterSelected"
                                              placeholder="Destinatario">
                            </md-contact-chips>
                        </md-content>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-12">Comentario</label>
                    <div class="col-sm-12">
                        <textarea ng-model="ctrl.mesavirtualComentario.ComentarioMesaVirtual" style="resize:inherit;height:60px" class="form-control" required></textarea>
                    </div>
                </div>
            </div>
            



            <div class="box-footer">

            </div>
        </div>
    </div>

