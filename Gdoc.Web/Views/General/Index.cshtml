<section class="content-header">
    <section class="content" ng-controller="general_controller as ctrl" ng-cloak>
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary margin-top">
                    <div class="box-header with-border">
                        <h3 class="box-title">Parametros</h3>
                        <button class="btn btn-default pull-right" ng-click="ctrl.editar()"><span class="glyphicon glyphicon-floppy-saved" data-placement="top" data-toggle="tooltip" title="Guardar enviar"></span></button>

                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-4">
                                <div>
                                    <form role="form" novalidate name="frmConcepto">
                                        <div class="box-body no-padding">

                                            <div class="form-group no-margin-bottom">
                                                <label>Empresa</label>
                                                <select class="form-control" ng-model="ctrl.general.IDEmpresa" ng-options="emp.IDEmpresa as emp.RazonSocial for emp in ctrl.listEmpresa" ng-change="ctrl.obtenerParametros(ctrl.general.IDEmpresa)" disabled>
                                                    <option value="">Seleccione</option>
                                                </select>
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Usuario Administrador</label>
                                                <input type="text" class="form-control" placeholder="Usuario Administrador" ng-model="ctrl.general.IDUsuario">
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Servidor(IP)</label>
                                                <input type="text" class="form-control" placeholder="Servidor" ng-model="ctrl.general.Servidor">
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Plazo Documento Electronico</label>
                                                <input type="text" class="form-control" placeholder="Plazo Documento Electronico" ng-model="ctrl.general.PlazoDoctoElectronico">
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Extension Plazo Documento Electronico</label>
                                                <input type="text" class="form-control" placeholder="Extension Plazo Documento Electronico" ng-model="ctrl.general.ExtensionPlazoDoctoElectronico">
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Alerta Documento Electronico</label>
                                                <input type="text" class="form-control" placeholder="Alerta Documento Electronico" ng-model="ctrl.general.AlertaDoctoElectronico">
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Plazo Expira Firma</label>
                                                <input type="text" class="form-control" placeholder="Plazo Expira Firma" ng-model="ctrl.general.PlazoExpiraFirma">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div>

                                    <form role="form">
                                        <div class="box-body no-padding">

                                            <div class="form-group no-margin-bottom">
                                                <label>Plazo Mesa Virtual</label>
                                                <input type="text" class="form-control" placeholder="Plazo Mesa Virtual" ng-model="ctrl.general.PlazoMesaVirtual">
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Extension Plazo Mesa Virtual</label>
                                                <input type="text" class="form-control" placeholder="Extension Plazo Mesa Virtual" ng-model="ctrl.general.ExtensionPlazoMesaVirtual">
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Alerta Mesa Virtual</label>
                                                <input type="text" class="form-control" placeholder="Alerta Mesa Virtual" ng-model="ctrl.general.AlertaMesaVirtual">
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Alerta Mail Laboral</label>
                                                <input type="text" class="form-control" placeholder="Alerta Mail Laboral" ng-model="ctrl.general.AlertaMailLaboral">
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Alerta Mail Personal</label>
                                                <input type="text" class="form-control" placeholder="Alerta Mail Personal" ng-model="ctrl.general.AlertaMailPersonal">
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Tamaño maximo de Adjunto (Bytes)</label>
                                                <input type="text" class="form-control" placeholder="Tamaño maximo de Adjunto" ng-model="ctrl.general.TamanoMaxArchivo">
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Tamaño maximo de total de Adjuntos (Bytes)</label>
                                                <input type="text" class="form-control" placeholder="Tamaño maximo de total de Adjuntos" ng-model="ctrl.general.TamanoMaxArchivos">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div>

                                    <form role="form">
                                        <div class="box-body no-padding">

                                            <div class="form-group no-margin-bottom">
                                                <label>Hora Actualiza Estado Operacion</label>
                                                <input type="date" class="form-control" placeholder="Hora Actualiza Estado Operacion" ng-model="ctrl.general.HoraActualizaEstadoOperacion" >
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Hora Cierre Laborales</label>
                                                @*<input type="text" class="form-control" placeholder="Hora Cierre Laborales" ng-model="ctrl.general.HoraCierreLabores | toDateTime | date: 'yyyy-MM-dd HH:mm'">*@
                                                <input type="date" class="form-control" placeholder="Hora Cierre Laborales" ng-model="ctrl.general.HoraCierreLabores">
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Ruta Imagenes</label>
                                                <input type="text" class="form-control" placeholder="Ruta Imagenes" ng-model="ctrl.general.RutaGdocImagenes">
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Ruta PDF</label>
                                                <input type="text" class="form-control" placeholder="Ruta PDF" ng-model="ctrl.general.RutaGdocPDF">
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Ruta Adjuntos</label>
                                                <input type="text" class="form-control" placeholder="Ruta Adjuntos" ng-model="ctrl.general.RutaGdocAdjuntos">
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Ruta Externos</label>
                                                <input type="text" class="form-control" placeholder="Ruta Externos" ng-model="ctrl.general.RutaGdocExternos">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</section>
@section Scripts{
    <script src="~/scripts/appjs/general-controller.js"></script>
}