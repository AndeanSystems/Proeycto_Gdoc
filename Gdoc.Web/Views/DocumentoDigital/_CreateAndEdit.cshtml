<form role="form" name="frmDatos" novalidate>

    <div class="col-md-4">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Datos del Documento</h3>
                <button class="btn btn-default pull-right" ng-click="ctrl.CambiarVentana('List')"><i class="fa fa-list-alt" data-placement="top" data-toggle="tooltip" title="Lista"></i></button>
                <button class="btn btn-default pull-right" ng-click="ctrl.nuevo()"><i class="fa fa-file fa-1x" data-placement="top" data-toggle="tooltip" title="Nuevo"></i></button>
            </div>
            <div class="box-body">
                <div class="form-group margin-bottom">
                    <label class="col-sm-12">Tipo Documento <span class="text-danger">(*)</span></label>
                    <div class="col-sm-12">
                        <select style="margin-bottom: 15px;" class="form-control" ng-model="ctrl.operacion.TipoDocumento" ng-options="td.CodiConcepto as td.DescripcionConcepto for td in ctrl.listTipoDocumento">
                            <option value="">Seleccione</option>
                        </select>
                    </div>
                </div>

                <div class="form-group no-margin">
                    <label class="col-sm-4 ">Derivación <span class="text-danger">(*)</span></label>
                    <md-radio-group ng-model="ctrl.operacion.DocumentoDigitalOperacion.DerivarDocto" required>
                        <md-radio-button style="display:inline-block;margin-right:5em;margin-left:1em;" value="S">Si</md-radio-button>
                        <md-radio-button style="display:inline-block;margin-right:2em;margin-left:1em;" value="N">No</md-radio-button>

                    </md-radio-group>
                </div>

                <div class="form-group no-margin">
                    <label class="col-sm-4">Accesso <span class="text-danger">(*)</span></label>
                    <md-radio-group ng-model="ctrl.operacion.AccesoOperacion" required>
                        <md-radio-button style="display:inline-block;margin-right:2.8em;margin-left:1em;" value="{{ta.CodiConcepto}}" class="standard" ng-repeat="ta in ctrl.listTipoAcceso">{{ta.DescripcionCorta}} </md-radio-button>
                    </md-radio-group>
                </div>

                <div class="form-group no-margin">
                    <label class="col-sm-4">Interno<span class="text-danger">(*)</span></label>
                    <md-radio-group ng-model="ctrl.operacion.TipoComunicacion" required>
                        <md-radio-button style="display:inline-block;margin-right:5em;margin-left:1em;" value="1">Si</md-radio-button>
                        <md-radio-button style="display:inline-block;margin-right:2em;margin-left:1em;" value="2">No</md-radio-button>
                    </md-radio-group>
                </div>

                <div class="form-group ">
                    <label class="col-md-12">Prioridad de Atención <span class="text-danger">(*)</span></label>
                    <div class="col-sm-12">
                        <select class="form-control" ng-model="ctrl.operacion.PrioridadOperacion" ng-options="pa.CodiConcepto as pa.DescripcionConcepto for pa in ctrl.listPrioridadAtencion " required>
                            <option value="">Seleccione</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-6">Estado</label>
                    <label class="col-sm-6">Fecha de Registro</label>
                        
                </div>
                <div class="form-group">
                    <div class="col-sm-6">
                        <select class="form-control" ng-model="ctrl.operacion.EstadoOperacion" ng-options="td.CodiConcepto as td.DescripcionConcepto for td in ctrl.listEstado" disabled>  
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <input type="date" class="form-control" ng-model="ctrl.operacion.FechaRegistro" disabled>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-6">Fecha de Envio</label>
                    <label class="col-sm-6">Fecha de Vigencia</label>
                </div>

                <div class="form-group">
                    <div class="col-sm-6">
                        <input type="date" class="form-control" ng-model="ctrl.operacion.FechaEnvio" disabled>
                    </div>
                    <div class="col-sm-6">
                        <input type="date" class="form-control" ng-model="ctrl.operacion.FechaVigente" disabled>
                    </div>
                </div>

            </div>
        </div>

    </div>

    <div class="col-md-8">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Documento Digital</h3>
                <button class="btn btn-default pull-right" ng-disabled="frmDatos.$invalid" ng-click="ctrl.grabar(2)"><span class="glyphicon glyphicon-floppy-saved" data-placement="top" data-toggle="tooltip" title="Guardar enviar"></span></button>
                <button class="btn btn-default pull-right" ng-click="ctrl.grabar(1)"><i class="fa fa-floppy-o" data-placement="top" data-toggle="tooltip" title="Guardar"></i></button>
            </div>

            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#Datos">Datos</a></li>
                <li><a data-toggle="tab" href="#Referencia">Indexación <span class="text-danger">(*)</span></a></li>
            </ul>

            <div class="tab-content">
                <div id="Datos" class="tab-pane fade in active">
                    <div class="form-group">
                        <label class="col-sm-12">Titulo <span class="text-danger">(*)</span></label>
                        <div class="col-sm-12">
                            <input type="text" ng-model="ctrl.operacion.TituloOperacion" class="form-control" required>
                        </div>
                    </div>

                    @*<div class="form-group">
                        <label class="col-sm-12">Asunto <span class="text-danger">(*)</span></label>
                        <div class="col-sm-12">
                            <input type="text" ng-model="ctrl.operacion.DescripcionOperacion" class="form-control" required>
                        </div>
                    </div>*@

                    <div class="form-group">
                        <label class="col-sm-12">Remitente <span class="text-danger">(*)</span></label>
                        <div style="font-size:12px" class="col-sm-12">
                            <md-content class="autocomplete" layout="column">
                                <md-contact-chips ng-model="ctrl.usuarioRemitentes"
                                                    md-contacts="ctrl.querySearch($query)"
                                                    md-contact-name="Nombre"
                                                    md-highlight-flags="i"
                                                    filter-selected="ctrl.filterSelected"
                                                    placeholder="Remitente">
                                </md-contact-chips>
                            </md-content>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-12">Destinatario <span class="text-danger">(*)</span></label>
                        <div class="col-sm-12">
                            <md-content class="autocomplete" layout="column">
                                <md-contact-chips ng-model="ctrl.usuarioDestinatarios"
                                                    md-contacts="ctrl.querySearch($query)"
                                                    md-contact-name="Nombre"
                                                    md-highlight-flags="i"
                                                    filter-selected="ctrl.filterSelected"
                                                    placeholder="Destinatario">
                                </md-contact-chips>
                            </md-content>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-12">Elegir Archivo</label>
                        <div class="col-md-12">
                            <label>{{ctrl.listDocumentoAdjunto[0].NombreOriginal}}</label>
                            <button class="btn btn-default pull-right" ng-click="ctrl.listarAdjunto()" ng-disabled="false"><i class="fa fa-paperclip" aria-hidden="true" style="font-size:1.5em;" ng-disabled="true"></i></button>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-6">Fecha de Emisión</label>
                        <label class="col-sm-6">Fecha de Recepcion</label>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-6">
                            <md-datepicker ng-model="ctrl.operacion.FechaEmision"></md-datepicker>
                        </div>
                        <div class="col-sm-6">
                            <md-datepicker ng-model="ctrl.operacion.FechaCierre"></md-datepicker>
                        </div>
                    </div>
                </div>
                <div id="Referencia" class="tab-pane fade">

                    <div class="form-group">
                        <label class="col-sm-12">Referencia de Indexación</label>
                        <div class="col-md-12">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="text" class="form-control" placeholder="Nueva Referencia de Indexación" ng-model="ctrl.referencia.DescripcionIndice">
                        </div>
                        <div class="col-md-2">

                            <span class="input-group-btn">
                                <button type="submit" name="search" id="search-btn" class="btn btn-flat" ng-click="ctrl.agregarreferencia(ctrl.referencia.DescripcionIndice)"><i class="fa fa-plus-circle" data-placement="top" data-toggle="tooltip" title="Agregar"></i></button>
                            </span>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Indexación</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="item in ctrl.listaReferencia">
                                    <td>{{item.DescripcionIndice}}</td>
                                    <td>
                                        <i class="fa fa-times  " data-placement="top" data-toggle="tooltip" title="Borrar" ng-click="ctrl.eliminarreferencia($index)"></i>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="box-body">
            </div>
        </div>
    </div>


    <!--MODAL ADJUNTOS-->
    <div class="modal fade" id="modal_adjuntos">
        <div class="modal-dialog modal-lg" style="width:50%;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Documentos Adjuntos</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box box-primary">

                                <div class="margin">
                                    <div class="col-md-10">
                                        <input type="file" id="input_file" onchange="ReadFileToBinary(this)" ng-show="ctrl.agregar" accept="application/pdf" class="form-control" style="display:initial;">
                                    </div>

                                    <div class="col-md-2">
                                        <button class="btn btn-default pull-right" ng-show="ctrl.agregar" ng-click="ctrl.agregaradjunto()"><i class="fa fa-plus" data-placement="top" data-toggle="tooltip" title="Agregar"></i></button>
                                    </div>
                                </div>
                                
                                <table class="table table-hover table-bordered table-striped margin-top">
                                    <thead>
                                        <tr>
                                            <th style="width:90%">Nombre</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="item in ctrl.listDocumentoAdjunto">
                                            @*<td>{{item.Adjunto.NombreOriginal}}</td>*@
                                            <td>{{item.NombreOriginal}}</td>
                                            <td>
                                                <i class="fa fa-folder-open-o" ng-click="ctrl.mostrarAdjuntoWindows(item)" ng-show="ctrl.mostrar" style="padding: 4px;font-size: 1.4em;" data-placement="top" data-toggle="tooltip" title="Abrir"></i>
                                                <i class="fa fa-times" ng-click="ctrl.eliminarAdjunto($index)" ng-show="ctrl.eliminar" style="padding: 4px;font-size: 1.4em;" data-placement="top" data-toggle="tooltip" title="Borrar"></i>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>