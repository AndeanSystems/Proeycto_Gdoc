<!-- Content Header (Page header) -->
<section class="content-header">
    <section class="content" ng-controller="documentoelectronico_controller as ctrl" layout="column" ng-cloak>
        <!--comienso de cuerpo documento electrocnico-->
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary margin-top">
                    <div class="box-header with-border">
                        <h3 class="box-title">Documentos Electronicos</h3>
                    </div>
                    <div class="box-body no-padding">
                        <div class="row">
                            <br>
                            <div class="col-md-2"></div>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Buscar Documentos">
                                    <span class="input-group-btn">
                                        <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-default" data-toggle="modal" data-target="#modal_contenido"><i class="fa fa-file fa-1x" data-placement="top" data-toggle="tooltip" title="Nuevo"></i></button>
                            </div>
                            <div class="col-md-2"></div>
                        </div>
                        <md-content class="md-padding autocomplete" layout="column">
                            <md-contact-chips ng-model="ctrl.usuarioRemitentes"
                                              md-contacts="ctrl.querySearch($query)"
                                              md-contact-name="NombreUsuario"
                                              md-contact-image="RutaFoto"
                                              md-contact-email="EmailTrabrajo"
                                              md-require-match="true"
                                              md-highlight-flags="i"
                                              filter-selected="ctrl.filterSelected"
                                              placeholder="Remitente">
                            </md-contact-chips>
                        </md-content>
                        <br>
                        <div class="table-responsive mailbox-messages">
                            <table class="table table-hover table-striped">
                                <thead>
                                <th>Nº Documento <i class="fa fa-sort"></i></th>
                                <th>Fecha Creación <i class="fa fa-sort"></i></th>
                                <th>Remitente (De) <i class="fa fa-sort"></i></th>


                                <th>Acciones</th>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="mailbox-date">DE0001-2015-FPC-GPD </td>
                                        <td class="mailbox-subject">11/07/2015</td>
                                        <td class="mailbox-subject">JSANCHEZ, Registro de Documento Electronico</td>
                                        <td>
                                            <i class="fa fa-pencil-square-o  " data-placement="top" data-toggle="tooltip" title="Editar"></i>
                                            <i class="fa fa-times  " data-placement="top" data-toggle="tooltip" title="Borrar"></i>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="mailbox-date">DE0001-2015-FPC-GPD </td>
                                        <td class="mailbox-subject">11/07/2015</td>
                                        <td class="mailbox-subject">JSANCHEZ, Registro de Documento Electronico</td>
                                        <td>
                                            <i class="fa fa-pencil-square-o  " data-placement="top" data-toggle="tooltip" title="Editar"></i>
                                            <i class="fa fa-times  " data-placement="top" data-toggle="tooltip" title="Borrar"></i>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--modal de editor-->
        <div class="modal fade" id="modal_contenido">
            <div class="modal-dialog modal-lg" style="width:90%;">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Documento Electronico</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="box box-primary">
                                    <div class="box-header with-border">
                                        <h3 class="box-title">Opciones del Documento</h3>
                                    </div><!-- /.box-header -->
                                    <!-- form start -->
                                    <form role="form">
                                        <div class="box-body">
                                            <div class="form-group no-margin-bottom">
                                                <label>Tipo de Accesso</label>
                                                <md-radio-group ng-model="ctrl.operacion.AccesoOperacion" style="display:flexbox">
                                                    <md-radio-button value="{{ta.CodiConcepto}}" class="md-primary" ng-repeat="ta in ctrl.listTipoAcceso | limitTo:2">{{ta.DescripcionConcepto}} </md-radio-button>
                                                 
                                                </md-radio-group>
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Tipo de Documento</label>
                                                <select class="form-control" ng-model="ctrl.operacion.TipoDocumento" ng-options="td.CodiConcepto as td.DescripcionConcepto for td in ctrl.listTipoDocumento">
                                                    <option value="">Seleccione</option>
                                                </select>
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Tipo de Comunicacion</label>
                                                <select class="form-control">
                                                    <option>INTERNA</option>
                                                    <option>EXTERNA</option>
                                                </select>
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Plzo de Confirmación</label>
                                                <input type="text" class="form-control" placeholder="12/08/2015">
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label>Prioridad de Atención</label>
                                                <select class="form-control" ng-model="ctrl.operacion.PrioridadOperacion" ng-options="pa.CodiConcepto as pa.DescripcionConcepto for pa in ctrl.listPrioridadAtencion ">
                                                    <option value="">Seleccione</option>
                                                </select>
                                            </div>

                                            <div class="form-group no-margin-bottom">
                                                <label class="col-sm-4">Estado</label>
                                                <div class="col-sm-8">
                                                    <label><input type="checkbox"> Activo</label>
                                                </div>
                                            </div>


                                        </div>
                                    </form>
                                </div>
                            </div><!-- /.col -->
                            <div class="col-md-8">
                                <div class="box box-primary">
                                    <div class="box-header with-border">
                                        <h3 class="box-title">Contenido del Documento</h3>
                                        <button class="btn btn-default pull-right"><span class="glyphicon glyphicon-floppy-saved" data-placement="top" data-toggle="tooltip" title="Guardar enviar"></span></button>
                                        <button class="btn btn-default pull-right"><i class="fa fa-floppy-o" data-placement="top" data-toggle="tooltip" title="Guardar"></i></button>
                                    </div><!-- /.box-header -->
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="col-sm-2">Remitente</label>
                                                <div class="col-sm-10">
                                                    <md-content class="md-padding autocomplete" layout="column">
                                                        <md-contact-chips ng-model="ctrl.usuarioRemitentes"
                                                                          md-contacts="ctrl.querySearch($query)"
                                                                          md-contact-name="NombreUsuario"
                                                                          md-contact-image="RutaFoto"
                                                                          md-contact-email="EmailTrabrajo"
                                                                          md-require-match="true"
                                                                          md-highlight-flags="i"
                                                                          filter-selected="ctrl.filterSelected"
                                                                          placeholder="Remitente">
                                                        </md-contact-chips>
                                                    </md-content>
                                                </div><!-- /.form-group -->
                                            </div>

                                            <div class="form-group">
                                                <label class="col-sm-2">Destinatario</label>
                                                <div class="col-sm-10">
                                                    <md-content class="md-padding autocomplete" layout="column">
                                                        <md-contact-chips ng-model="ctrl.usuarioDestinatarios"
                                                                          md-contacts="ctrl.querySearch($query)"
                                                                          md-contact-name="NombreUsuario"
                                                                          md-contact-image="RutaFoto"
                                                                          md-contact-email="EmailTrabrajo"
                                                                          md-require-match="true"
                                                                          md-highlight-flags="i"
                                                                          filter-selected="ctrl.filterSelected"
                                                                          placeholder="Destinatario">
                                                        </md-contact-chips>
                                                    </md-content>
                                                </div><!-- /.form-group -->
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <br>
                                        <textarea id="editor1" name="editor1" rows="10" cols="80">
                                            Editor de texto
                                        </textarea>
                                        <div class="form-group">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                </div>
            </div>
        </div>

      
    </section>


</section>
@section Scripts{
    <script src="~/scripts/appjs/documentoelectronico-controller.js"></script>
}

