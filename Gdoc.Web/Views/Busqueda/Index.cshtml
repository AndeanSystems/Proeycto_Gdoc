<section class="content-header">
    <section class="content" ng-controller="busqueda_controller as ctrl" ng-cloak>
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary margin-top">
                    <div class="box-header with-border">
                        <h3 class="box-title">Busqueda</h3>
                        <button class="btn btn-default btn-sm pull-right" ng-click="ctrl.buscarOperacion(ctrl.operacion)" ><i data-placement="top" data-toggle="tooltip" title="Buscar" class="fa fa-search"></i></button>
                        <button class="btn btn-default btn-sm pull-right" ng-click="ctrl.exportarExcel()"><i data-placement="top" data-toggle="tooltip" title="Excel" class="fa fa-file-excel-o"></i></button>
                    </div>

                    <div class="box-body" >
                        <div class="row">
                            <div class="col-sm-4">
                                <label style="font-weight: normal;">Tipo de Operacion</label>
                                <select class="form-control" ng-model="ctrl.operacion.TipoOperacion" ng-options="td.CodiConcepto as td.DescripcionConcepto for td in ctrl.listTipoOperacion">
                                    <option value="">Seleccione</option>
                                </select>
                            </div>

                            <div class="col-sm-4">
                                <label style="font-weight: normal;">Tipo de Documento</label>
                                <select class="form-control" ng-model="ctrl.operacion.TipoDocumento" ng-options="td.CodiConcepto as td.DescripcionConcepto for td in ctrl.listTipoDocumento">
                                    <option value="">Seleccione</option>
                                </select>
                            </div>

                            @*<div class="col-sm-6">
                                <label style="font-weight: normal;">Buscar</label>
                                <input type="text" class="form-control" placeholder="Buscar Mesa Virtual">
                                <span class="glyphicon   form-control-feedback"></span>
                            </div>*@

                            <div class="col-sm-4">
                                <label style="font-weight: normal;">Fecha Registro</label>
                                <input type="date" class="form-control">
                            </div>

                            <div class="col-sm-4">
                                <label style="font-weight: normal;">Hasta</label>
                                <input type="date" class="form-control">
                            </div>

                            <div class="col-sm-4">
                                <label style="font-weight: normal;">Remitente</label>
                                <input type="text" class="form-control" placeholder="Remitente">
                            </div>

                            <div class="col-sm-4">
                                <label style="font-weight: normal;">Destinatario</label>
                                <input type="email" class="form-control" id="Email1" placeholder="Destinatario">
                            </div>
                        </div>
                        
                    </div>
                    <div class="grid" style="font-size: 12px; height: 400px" ui-grid="ctrl.gridOptions" ui-grid-pagination></div>
                </div>
            </div>

        </div>
    </section>
</section>
@section Scripts{
    <script src="~/scripts/appjs/busqueda-controller.js"></script>
}
